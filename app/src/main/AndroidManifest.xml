<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:name=".application.MusicApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicPlayer"
        tools:targetApi="31">
        <activity android:name=".PlayerActivty"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="orientation|screenSize"
            android:exported="false"/>
        <activity
            android:name=".AlbumActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".services.PlayerService"
            android:enabled="true"
            android:exported="false">
        </service>
        <receiver android:name=".services.PlayerReceiver" android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="action_next"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>